{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true, // Let TypeScript handle unused variables
    "noUnusedParameters": true, // Let TypeScript handle unused parameters
    "noImplicitReturns": true, // Warn if functions don't return a value
    "noFallthroughCasesInSwitch": true // Ensure all switch cases are handled
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
